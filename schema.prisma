datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(cuid())
  name     String  @default("")
  email    String  @unique @default("")
  role     String?
  password String
}

model Color {
  id                  String    @id @default(cuid())
  name                String    @unique @default("")
  red                 Int
  green               Int
  blue                Int
  hex                 String    @unique @default("")
  from_Palette_colors Palette[] @relation("Palette_colors")
}

model Palette {
  id     String  @id @default(cuid())
  name   String  @default("")
  colors Color[] @relation("Palette_colors")
}

model Frame {
  id                 String    @id @default(cuid())
  name               String    @unique @default("")
  horizontal         Int
  vertical           Int
  price              Float
  from_Presale_frame Presale[] @relation("Presale_frame")
  from_Sale_frame    Sale[]    @relation("Sale_frame")
}

model Presale {
  id      String  @id @default(cuid())
  frame   Frame?  @relation("Presale_frame", fields: [frameId], references: [id])
  frameId String? @map("frame")
  image   Image?  @relation("Presale_image", fields: [imageId], references: [id])
  imageId String? @map("image")

  @@index([frameId])
  @@index([imageId])
}

model Sale {
  id      String    @id @default(cuid())
  created DateTime? @default(now())
  frame   Frame?    @relation("Sale_frame", fields: [frameId], references: [id])
  frameId String?   @map("frame")
  image   Image?    @relation("Sale_image", fields: [imageId], references: [id])
  imageId String?   @map("image")
  price   Float

  @@index([frameId])
  @@index([imageId])
}

model Image {
  id                 String    @id @default(cuid())
  image              String?
  from_Presale_image Presale[] @relation("Presale_image")
  from_Sale_image    Sale[]    @relation("Sale_image")
}